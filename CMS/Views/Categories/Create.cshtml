@model CMS.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<h1>Criar Categoria</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label fw-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Slug" class="control-label fw-bold"></label>
                <input asp-for="Slug" class="form-control" />
                <div class="form-text">Deixe em branco para gerar o slug automaticamente.</div>
                <span asp-validation-for="Slug" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
