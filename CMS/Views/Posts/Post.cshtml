@model CMS.ViewModels.PostViewModel

@{
    ViewData["Title"] = "Posts";
}

<h1 class="text-center">@Html.DisplayFor(model => model.Title)</h1>

<div class="text-center mb-3">
    <span class="badge rounded-pill bg-dark text-bg-dark">@Html.DisplayFor(model => model.Category.Name)</span>
</div>


@if (@Model.ImageUrl != null)
{
    <img class="rounded mx-auto d-block" src="~/images/@Model.ImageUrl" alt="Image" width="50%" />
}
<div class="mt-3">@Html.Raw(Model.Content)</div>